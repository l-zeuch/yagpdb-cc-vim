root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.py]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.vader]
indent_style = space
indent_size = 2

[*.vim]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
max_line_length = 125
